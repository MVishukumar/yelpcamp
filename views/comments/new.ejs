<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h3 style="text-align: center;">Add new comment to <%= campgroundObj.name %></h3>

    <div style="width: 30%; margin: 20px auto">
      <form action="/campgrounds/<%= campgroundObj._id %>/comment" method="post">
        <div class="form-group">
          <input type="text" name="comment[author]" placeholder="Your name" class="form-control" readonly value="<%= currentUser.username %>" />
        </div>
        <div class="form-group">
          <input type="text" name="comment[text]" placeholder="Your comment" class="form-control"/>
        </div>
        <div class="form-group">
          <button type="submit" name="Submit" class="btn btn-primary btn-block">Add</button>
        </div>
      </form>

      <a href="/campgrounds">Go back</a>
    </div>

  </div>
</div>

<% include ../partials/footer %>
