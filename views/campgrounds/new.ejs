<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h3 style="text-align: center;">Add new campground</h3>

    <div style="width: 30%; margin: 20px auto">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <input type="text" name="name" placeholder="Campground name" class="form-control" />
        </div>
        <div class="form-group">
          <input type="text" name="image" placeholder="Campground image" class="form-control" />
        </div>
        <div class="form-group">
          <input type="text" name="description" placeholder="Campground description" class="form-control" />
        </div>
        <div class="form-group">
          <button type="submit" name="Submit" class="btn btn-primary btn-block">Add</button>
        </div>
      </form>

      <a href="/campgrounds">Go back</a>
    </div>

  </div>
</div>

<% include ../partials/footer %>
